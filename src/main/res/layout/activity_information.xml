<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010101"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/dailyLifeButton"
        android:layout_width="202dp"
        android:layout_height="97dp"
        android:background="#4e78c4"
        android:text="Daily Life"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fiveRsButton"
        android:layout_width="202dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:background="#4e78c4"
        android:text="The 5 R's"
        app:layout_constraintBottom_toTopOf="@+id/electricCarsButton"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/interviewButton"
        android:layout_width="202dp"
        android:layout_height="97dp"
        android:layout_marginBottom="8dp"
        android:background="#acdc54"
        android:text="Interview"
        app:layout_constraintBottom_toTopOf="@+id/dailyLifeButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/electricCarsButton"
        android:layout_width="202dp"
        android:layout_height="97dp"
        android:background="#acdc54"
        android:text="Electric Cars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Saving the earth, one step at a time."
        android:textColor="#ffffff"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@+id/interviewButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>